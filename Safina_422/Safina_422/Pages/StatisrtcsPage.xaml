<Page x:Class="Safina_422.Pages.StatisrtcsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safina_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisrtcsPage">
    <Grid>
        <ListView x:Name="EntriesList">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Количество: сыгранных матчей" DisplayMemberBinding="{Binding ColMatchesPlayed}" Width="200" />
                        <GridViewColumn Header="побед" DisplayMemberBinding="{Binding ColWins}" Width="150"/>
                        <GridViewColumn Header="поражений" DisplayMemberBinding="{Binding ColDefeats}" Width="150"/>
                        <GridViewColumn Header="Место в турнире" DisplayMemberBinding="{Binding PlaceTournament}" Width="150"/>
                        <GridViewColumn Header="Место в турнире" DisplayMemberBinding="{Binding PlaceTournament}" Width="150"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
