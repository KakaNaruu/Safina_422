<Page x:Class="Safina_422.Pages.AuthoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safina_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthoPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Зайдите в систему" FontSize="15" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин:</TextBlock>
                <TextBox x:Name="LoginTb"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Пароль:</TextBlock>
                <PasswordBox x:Name="PasswordBox" Height="25" Width="100" Margin="5"/>
            </StackPanel>
            <Button Width="150" Height="25" Margin="5" HorizontalAlignment="Center" x:Name="LoginBtn" Click="LoginBtn_Click">Войти</Button>
            <Button Width="150" Height="25" Margin="5" HorizontalAlignment="Center" x:Name="ZLoginBtn">Войти как зритель</Button>
        </StackPanel>
    </Grid>
</Page>
